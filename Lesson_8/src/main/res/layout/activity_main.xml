<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/imageViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ImageView"/>

        <Button
            android:id="@+id/analogClockButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AnalogClock"/>

        <Button
            android:id="@+id/digitalClockViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DigitalClock"/>

        <Button
            android:id="@+id/textClockViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextClock"/>

        <Button
            android:id="@+id/chronometerViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chronometer"/>

        <Button
            android:id="@+id/scrollViewViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScrollView"/>

        <Button
            android:id="@+id/horizontalScrollViewViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HorizontalScrollView"/>

        <Button
            android:id="@+id/scrollViewWithHorizontalViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScrollView with Horizontal"/>

        <Button
            android:id="@+id/switchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch"/>

        <Button
            android:id="@+id/webViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebView"/>

        <Button
            android:id="@+id/datePickerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DatePicker"/>
    </LinearLayout>
</ScrollView>

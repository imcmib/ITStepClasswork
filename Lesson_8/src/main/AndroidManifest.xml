<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.itstep.android.classwork" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.itstep.android.classwork.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ImageViewActivity"/>
        <activity android:name=".AnalogClockActivity"/>
        <activity android:name=".DigitalClockActivity"/>
        <activity android:name=".TextClockActivity"/>
        <activity android:name=".ChronometerActivity"/>
        <activity android:name=".ScrollViewActivity"/>
        <activity android:name=".HorizontalScrollViewActivity"/>
        <activity android:name=".ScrollViewWithHorizontalActivity"/>
        <activity android:name=".SwitchActivity"/>
        <activity android:name=".WebViewActivity"/>
        <activity android:name=".DatePickerActivity"/>
    </application>

</manifest>

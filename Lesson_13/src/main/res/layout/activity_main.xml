<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <Button
        android:id="@+id/simpleAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple AlertDialog"/>

    <Button
        android:id="@+id/activityAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity AlertDialog"/>

    <Button
        android:id="@+id/listAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List AlertDialog"/>

    <Button
        android:id="@+id/radioAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Radio AlertDialog"/>

    <Button
        android:id="@+id/checkAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkable AlertDialog"/>

    <Button
        android:id="@+id/autoCloseAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Close AlertDialog"/>

    <Button
        android:id="@+id/customAlertDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom AlertDialog"/>
</LinearLayout>

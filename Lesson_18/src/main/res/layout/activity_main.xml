<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <Button
        android:id="@+id/simpleNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple notification"/>

    <Button
        android:id="@+id/expandedNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expanded layout notification"/>

    <Button
        android:id="@+id/updateNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update notification"/>

    <Button
        android:id="@+id/progressNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress notification"/>

    <Button
        android:id="@+id/progressInNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress endless notification"/>

    <Button
        android:id="@+id/customNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom notification"/>

</LinearLayout>
